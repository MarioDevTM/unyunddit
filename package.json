{
	"name": "onion-ssr-boilerplate",
	"version": "1.0.0",
	"description": "Privacy-focused SvelteKit boilerplate for .onion websites with SSR-only mode and Supabase integration",
	"type": "module",
	"keywords": [
		"svelte",
		"sveltekit",
		"tor",
		"onion",
		"ssr",
		"privacy",
		"supabase",
		"boilerplate"
	],
	"author": "Privacy-conscious developer community",
	"license": "WTFPL",
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/onion-ssr-boilerplate.git"
	},
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"db:reset": "pnpx supabase db reset",
		"db:migrate": "pnpx supabase migrations new",
		"docker:build": "docker build -t onion-ssr-boilerplate .",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"deploy:railway": "./scripts/setup-railway.sh",
		"deploy:digitalocean": "./scripts/setup-digitalocean.sh",
		"volume:railway": "./scripts/create-railway-volume.sh",
		"droplet:create": "./scripts/create-digitalocean-droplet.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"jsdom": "^27.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.58.0"
	}
}